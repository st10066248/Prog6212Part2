<h2>Pending Claims</h2>
<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Notes</th>
            <th>Document</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.LecturerName</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.Notes</td>
                <td>
                    @if (!string.IsNullOrEmpty(claim.SupportingDocument))
                    {
                        <a href="/uploads/@claim.SupportingDocument" target="_blank">View Document</a>
                    }
                </td>
                <td>
                    <form asp-action="ApproveClaim" method="post">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-success">Approve</button>
                    </form>
                    <form asp-action="RejectClaim" method="post" style="display:inline;">
                        <input type="hidden" name="claimId" value="@claim.ClaimId" />
                        <button type="submit" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
