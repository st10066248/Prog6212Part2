@model LecturerClaim
<h2>Submit Your Claim</h2>
<form asp-action="SubmitClaim" enctype="multipart/form-data">
    <div class="form-group">
        <label for="LecturerName">Lecturer Name</label>
        <input type="text" asp-for="LecturerName" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="HoursWorked">Hours Worked</label>
        <input type="number" asp-for="HoursWorked" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="HourlyRate">Hourly Rate</label>
        <input type="number" asp-for="HourlyRate" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Notes">Additional Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="file">Upload Supporting Document</label>
        <input type="file" name="file" class="form-control-file" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
